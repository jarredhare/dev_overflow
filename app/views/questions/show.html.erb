<div class="container">

  <div class="container">
    <h1><%= @question.title %></h1>
    <p><%= @question.content %></p>
    <%= link_to 'Edit Question', edit_question_path(@question) %>
    <%= link_to 'Destroy Question', question_path(@question), :method => :delete, data: {confirm: 'Are you sure you want to delete this question?'}  %>
  </div>


  <div class="container">
    <h2>Answers:</h2>
    <%= render @question.answers %>
  </div>

  <div class="container">
    <h2>Answer this Question:</h2>
    <%= render "answers/form" %>
  </div>
  

</div>
