<div class="container">
  <div class="col-md-4">
    <h3>Question:</h3>
    <h4><%= @question.title %></h4><br>
    <h4><%= @question.content %></h4><br>
    <%= link_to 'Edit Question', edit_question_path %>
    <%= link_to 'Destroy Question', question_path(@question), :confirm => 'Are you sure?', :method => :delete  %>
  </div>
  <div class="col-md-8">
    <h2>Create an answer:</h2>
    <%= render 'answer_form' %>
    <ul id="answers" class="list-group">
      <%= render @answers %>
    </ul>
  </div>
</div>
