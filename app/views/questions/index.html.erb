<%= form_for :question, url: questions_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
<h1>Questions List:</h1>
<ul>
  <% @questions.each do |question| %>
    <li>
      <%= link_to("#{question.title}", question_path(question)) %>
    </li>
    <p><%= question.content %></p>
  <% end %>
</ul>


