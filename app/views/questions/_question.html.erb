<li id="<%= question.id %>" class="list-group-item">
  <%= link_to("↑", upvote_question_path(question), method: :post, remote: true) %>
  <%= link_to("↓", downvote_question_path(question),  method: :post, remote: true) %>
  <strong><%= link_to("#{question.title}", question_path(question)) %></strong>

  <span class="badge"><%= pluralize(vote_count(question), "vote") %></span>

  <p><%= question.content %></p>
</li>